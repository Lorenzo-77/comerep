<h1>tienda</h1>
<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      {{#each item}}

      <div class="col mb-5">
        <div class="card h-100">
          <!-- Sale badge-->
          <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Nuevo</div>
          <!-- Product image-->
          <img class="card-img-top" src="/uploads/{{nombre}}" alt="..." />
          <!-- Product details-->
          <div class="card-body p-4">
            <div class="text-center">
              <!-- Product name-->
              <h5 class="fw-bolder">{{titulo}}</h5>
              <!-- Product reviews-->
              <div class="d-flex justify-content-center small text-warning mb-2">
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
              </div>
              <!-- Product price-->

              ${{precio}}
            </div>
          </div>
          <!-- Product actions-->

          <div class="card-footer p-4 pt-0 border-top-0 bg-transparent ">
            <div class="text-center"> <a href="/tasks/edit/{{id}}" class="btn btn-outline-dark mt-auto">
                <i class="bi bi-pencil-square"></i>Editar</a>

              <form action="/tasks/delete" method="POST" class="mx-2 ">
                <input type="hidden" value="{{id}}" name="id">
                <button class="btn btn-outline-dark mt-auto" type="submit">
                  <i class="bi bi-trash"></i>Borrar</button>
              </form>
            </div>

          </div>

        </div>
      </div>


      {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card text-center">
          <div class="card-body">

            <p class="lead">No hay Tareas</p>
            <a href="/create" class="btn btn-success btn-block">Crear Tareas</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>