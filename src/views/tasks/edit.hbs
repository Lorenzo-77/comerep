<div class="col-md-4 mx-auto">
    <div class="card text-center">
    <div class="card-header">
        <h3>Editar Producto</h3>
    </div>
    <div class="card-body">
  {{#each item }}
        <form action="" method="post">   
        <div class="input-group mb-3">
            <input type="text"  name="titulo" class="form-control" value="{{titulo}}">
        </div>
        <div class="input-group mb-3">
            <input type="number"  name="precio" class="form-control" value="{{precio}}">
        </div>
        <div class="input-group mb-3">
            <textarea class="form-control" name="descripcion" placeholder="DescripciÃ³n">{{descripcion}}</textarea>
        </div>
         <div class="input-group mb-3" >
          <select name="estado" class="form-select" aria-label="Default select example" >
            <option selected>{{estado}}</option>
              <option class="form-control">En Stock</option>
              <option class="form-control">Sin Stock</option>
          </select>
        </div> 
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
                Guardar
            </button>
        </div>
        </form>
  {{/each}}

   </div>
</div>
</div>